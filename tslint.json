{
  "extends": "tslint-config-standard",
  "rules": {
    "ter-indent": [
      true,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    ],
    "class-name": false,
    "no-use-before-declare": false,
    "strict-type-predicates": false,
    "no-floating-promises": false
  }
}
